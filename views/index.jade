extends layout


block content
        
    #idMasherCtrl(ng-controller="MasherCtrl")
        #idMasterSite(class="container-mastersite masher_defaultprimarycolor masher_textprimarycolor masher_dividercolor")
        
            #idMasterSiteControlRow(style="flex:1;", ng-cloak, class="ng-cloak")
            
                #idMasterSiteExpander(class="mastersitecontrol-expander")
                    #idExpButtonSum(class="havButton masher_accentcolor", ng-click="summmaryCollapser()")
                        span(style='cursor: pointer; cursor: hand;')
                            figure(style="margin-top: 4px; margin-bottom: 4px; margin-left: 4px;")
                                img(src="../stylesheets/images/{{ExpandSum}}.png", id='ExpandSumImgId', class="expandoimage", style="flex:1; margin: 0.01em 0.5em  0.01em  0.05em;")
                                figcaption(class="masher_accentcolor", style="flex:15;float: left;  text-align: left;padding: 0.01em 0.01em 0.01em 0.2em;") {{ExpandSum}} Summary
                            
                #idNavigatorExpander(class="mastersitecontrol-expander")
                    #idExpButtonNav(class="havButton masher_accentcolor", ng-click="onExpNavClick()")
                        span(style='cursor: pointer; cursor: hand;')
                            figure(style="margin-top: 4px; margin-bottom: 4px; margin-left: 4px;")
                                img(src="../stylesheets/images/{{ExpandNav}}.png", class="expandoimage"
                                  style="flex:1; margin: 0.01em 0.5em  0.01em  1.2em;")
                                figcaption(class="masher_accentcolor", style="flex:15;float: left;  text-align: left;padding: 0.01em 0.01em 0.01em 0.2em;") {{ExpandNav}} Navigator
                    
            #idMasterSiteSummary(collapse="isCollapsed", ng-cloak, class="ng-cloak mastersite-summary", style="display:{{MasterSiteVis}}")
                .background
                    div(id="mashbox", class="transbox", style="margin: 30px 40px; font-weight: bold; font-size: 150%; font-family:Arial; margin:auto; text-align: center; color: #00ff00;")
                        p Synchronizing Maps From a Variety of Map Systems
                        
                    div(style="background:rgba(255,255,255,0.99); background-color: #ffffff;")
                        div(ng-controller="TabsCtrl")
                            ul
                                li(ng-repeat="tab in tabs", ng-class="{active:isActiveTab(tab.url)}")
                                    div(ng-click="onClickTab(tab)")
                                        span {{tab.title}} 
                                            img(ng-src="{{tab.imgSrc}}", style="margin: 2px 5px 6px 5px")

                #mainView(ng-cloak, class="ng-cloak") {{currentTab.content}}
                    div(modal-show-websitedescription="", modal-visible="$parent.showDescriptionDialog", class="modal330", ng-controller="WebSiteDescriptionCtrl", modal-mdata="mData", role="dialog", class="modal", id="WebSiteDescriptionDialog", style="display: none; position:relative", data-backdrop="true")
                                    
                    div(ng-cloak, class="ng-cloak", class="tabselectionview")
                        div(id="currentTabSelectedId", style="float: left; font-weight: bold; margin-top: 0.5em; padding: 2px 5px 6px 5px;") Selected Map Type: {{currentTab.title}} 
                        img(src='{{currentTab.imgSrc}}', style='margin: 2px 5px 6px 5px')
                        input(type="button", id="describeTheWebsite", name="describeTheWebsite", ng-click='describeTheWebsiteClicked();', style='margin-left:40px; font-weight: bold;', class='masher_accentcolor', value='Tell  Me About The Website')
                        input(type="button", id="showMeTheMap", name="showMeTheMap", ng-click='showMeTheMapClicked();', style='margin-left:40px; font-weight: bold;', class='masher_accentcolor', value='Show Me The Website')
                        
                    
          
            div(id="ngview_container", style="position:relative;height:100%;width:100%;")
                ng-view
            
